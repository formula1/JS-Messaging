{
  "name": "common-messenger-interface",
  "version": "1.0.0",
  "description": "Typescript Validated Messenging Interface",
  "license": "JSON License <./license.txt>",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/npm/npm.git"
  },
  "author": "formula1 <samtobia@gmail.com> (http://samtobia.com/)",
  "main": "dist/node.js",
  "typings": "src/index.ts",
  "browser": {
    "stream": "readable-stream",
    "events": "node-event-emitter"
  },
  "dependencies": {
    "node-event-emitter": "0.0.1",
    "path-to-regexp": "^1.7.0",
    "readable-stream": "^2.2.3",
    "tslib": "^1.6.0"
  },
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:typescript": "tsc",
    "build:standalone": "browserify ./dist/global.js -o ./dist/standalone.js",
    "build:standalone-min": "uglifyjs --compress --mangle -o ./dist/standalone.min.js -- ./dist/standalone.js",
    "build:docs": "typedoc --target es6 --out ./docs .",
    "clean": "npm-run-all clean:*",
    "clean:typescript": "rimraf dist/es5",
    "clean:docs": "rimraf docs",
    "test": "npm-run-all test:lint-src test:cover",
    "test:lint-src": "tslint --project ./tsconfig.json -c ./tslint.json",
    "test:lint-test": "npm-run-all test:lint-test:*",
    "test:lint-test:style": "jscs --config=./.jscsrc ./test",
    "test:lint-test:js": "eslint --config=./.eslint.json ./test",
    "test:cover": "nyc npm run test:tap",
    "test:tap": "tap test/test.*.*.js",
    "test:importing": "node test/importing",
    "docs": "npm-run-all clean:docs build:docs"
  },
  "nyc": {
    "exclude": [
      "src/**/*",
      "test/**/*",
      "dist/standalone.js",
      "dist/standalone.min.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^7.0.5",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "browserify": "^14.1.0",
    "eslint": "^3.17.1",
    "jscs": "^3.0.7",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.1",
    "selenium-webdriver": "^3.1.0",
    "split": "^1.0.0",
    "tap": "^10.2.2",
    "ts-node": "^2.1.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1",
    "uglify-js": "^2.8.4"
  }
}
